<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.product.detail.DetailFragment">

    <data>
        <variable
            name="viewModel"
            type="com.challenge.meli.ui.product.ProductViewModel" />

        <variable
            name="detailFragment"
            type="com.challenge.meli.ui.product.detail.DetailFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/large_dimen">

        <include
            android:id="@+id/content_detail_product"
            layout="@layout/content_detail_product"
            bind:viewModel="@{viewModel}"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</layout>